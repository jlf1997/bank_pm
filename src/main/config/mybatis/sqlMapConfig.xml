<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE configuration  
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-config.dtd">  

<configuration>
	<!-- 全局参数定义，需要时再定义 -->
	<settings>
		<!-- 处理数据库插入时字段可能为空的情况 -->
		<setting name="jdbcTypeForNull" value="NULL" />
	</settings>
	
	<!-- 别名定义 -->
	<typeAliases>
		<!-- 批量别名定义 ,默认的别名就是包下类的名字（首字母大小写都可以）-->
			<package name="com.readboy.ssm.po" />
	</typeAliases>
	
	<!-- 加载映射文件 ,使用spring-mybatis整合包进行mapper扫描这里就不需要配置了-->
<!-- 	<mappers>
		批量加载mapper文件 ,要求Mapper.class与Mapper.xml文件同名且在同一目录
		<package name="com.readboy.ssm.mapper" />
	</mappers> -->
	
	
</configuration>
